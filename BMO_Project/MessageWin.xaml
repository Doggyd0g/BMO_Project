<Window x:Class="BMO_Project.MessageWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BMO_Project"
        mc:Ignorable="d" WindowStartupLocation="CenterOwner"
        Title="Nya" Height="200" Width="300" ResizeMode="NoResize">

    <Grid Background="#FF136151">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition ></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock HorizontalAlignment="Center" Margin="10" VerticalAlignment="Center" Text="Милое окошко (* ^ ω ^)"
                   FontWeight="Bold" FontSize="18" Foreground="AliceBlue" ></TextBlock>
        <TextBlock HorizontalAlignment="Center" Margin="10" VerticalAlignment="Center" Text="А может это ты ошибка? дебил"
                  Grid.Row="1" FontSize="15" Foreground="AliceBlue" Name="tb_text" TextWrapping="Wrap"  ></TextBlock>
        <Button Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center" Height="28" Width="100" Content="Ok"
                Background="#FF34C0A3" BorderBrush="#FF136151" Margin="0 0 20 0" FontSize="15" Foreground="AliceBlue" Click="Button_Click" ></Button>
    </Grid>
</Window>
